<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="mapper.search">
	<select id="columnsList" resultType="String" parameterType="String">
		<![CDATA[
			select column_name from user_tab_columns where table_name = #{tableName};
		]]>
	</select>
	
	<select id="foodColumns" resultType="foodDTO" parameterType="java.util.Map">
		select * from food where 
		<foreach collection="columns" item="item">
			#{item}
		</foreach>
		 = '#{search}
	</select>
</mapper>